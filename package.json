{
  "name": "pokedex",
  "version": "0.1.0",
  "description": "A server-rendered universal JavaScript application for PokÃ©mon trainers",
  "author": "Rafael Bardini",
  "homepage": "https://github.com/rbardini/pokedex",
  "keywords": [
    "pokemon",
    "pokedex",
    "encyclopedia",
    "index",
    "pokeapi"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "razzle start",
    "build": "razzle build",
    "test": "razzle test --env=jsdom",
    "type-check": "tsc --noEmit",
    "prestart:prod": "npm run build",
    "heroku-postbuild": "echo Skip build on Heroku",
    "start:prod": "NODE_ENV=production node build/server.js"
  },
  "heroku-run-build-script": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/rbardini/pokedex.git"
  },
  "bugs": {
    "url": "https://github.com/rbardini/pokedex/issues"
  },
  "license": "MIT",
  "dependencies": {
    "classnames": "2.2.6",
    "express": "4.17.1",
    "razzle": "3.0.0",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "react-helmet": "6.0.0-beta",
    "react-router-dom": "5.0.1"
  },
  "devDependencies": {
    "@testing-library/react": "9.1.3",
    "@types/classnames": "2.2.9",
    "@types/express": "4.17.1",
    "@types/jest": "24.0.18",
    "@types/react": "16.9.2",
    "@types/react-dom": "16.9.0",
    "@types/react-helmet": "5.0.9",
    "@types/react-router-dom": "4.3.5",
    "@types/webpack-env": "1.14.0",
    "jest": "24.9.0",
    "prettier": "1.18.2",
    "razzle-plugin-typescript": "3.0.0",
    "ts-jest": "24.0.2",
    "typescript": "3.5.3"
  },
  "jest": {
    "transform": {
      "\\.tsx$": "ts-jest",
      "\\.css$": "<rootDir>/node_modules/razzle/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/node_modules/razzle/config/jest/fileTransform.js"
    },
    "testMatch": [
      "<rootDir>/src/**/?(*.)test.tsx"
    ],
    "moduleFileExtensions": [
      "tsx",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**/*.tsx"
    ]
  }
}

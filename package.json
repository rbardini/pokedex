{
  "name": "pokedex",
  "version": "0.1.0",
  "description": "A server-rendered universal JavaScript application for PokÃ©mon trainers",
  "author": "Rafael Bardini",
  "homepage": "https://github.com/rbardini/pokedex",
  "keywords": [
    "pokemon",
    "pokedex",
    "encyclopedia",
    "index",
    "pokeapi"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "razzle start",
    "build": "razzle build",
    "test": "razzle test --env=jsdom",
    "type-check": "tsc --noEmit",
    "prestart:prod": "npm run build",
    "heroku-postbuild": "echo Skip build on Heroku",
    "start:prod": "NODE_ENV=production node build/server.js"
  },
  "heroku-run-build-script": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/rbardini/pokedex.git"
  },
  "bugs": {
    "url": "https://github.com/rbardini/pokedex/issues"
  },
  "license": "MIT",
  "dependencies": {
    "classnames": "2.2.6",
    "express": "4.16.4",
    "razzle": "2.4.1",
    "react": "16.8.3",
    "react-dom": "16.8.3",
    "react-helmet": "6.0.0-beta",
    "react-router-dom": "4.3.1"
  },
  "devDependencies": {
    "@types/classnames": "2.2.7",
    "@types/express": "4.16.1",
    "@types/jest": "24.0.11",
    "@types/react": "16.8.8",
    "@types/react-dom": "16.8.3",
    "@types/react-helmet": "5.0.8",
    "@types/react-router-dom": "4.3.1",
    "@types/webpack-env": "1.13.9",
    "jest": "24.5.0",
    "prettier": "1.16.4",
    "razzle-plugin-typescript": "2.4.1",
    "react-testing-library": "6.0.0",
    "ts-jest": "24.0.0",
    "typescript": "3.3.4000"
  },
  "jest": {
    "transform": {
      "\\.tsx$": "ts-jest",
      "\\.css$": "<rootDir>/node_modules/razzle/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/node_modules/razzle/config/jest/fileTransform.js"
    },
    "testMatch": [
      "<rootDir>/src/**/?(*.)test.tsx"
    ],
    "moduleFileExtensions": [
      "tsx",
      "js",
      "json"
    ],
    "collectCoverageFrom": [
      "src/**/*.tsx"
    ]
  }
}
